<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.sysrec.projet_ds1_java.Controller.TeacherController">

    <!-- Header -->
    <top>
        <HBox spacing="10" style="-fx-background-color: white; -fx-padding: 10;" alignment="CENTER_LEFT">
            <Label text="Teacher Dashboard" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#handleLogout" />

        </HBox>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Welcome -->
            <Label text="ðŸ‘‹ Welcome back, Mr. Smith!" style="-fx-font-size: 16px;" />

            <!-- Stats Cards -->
            <HBox spacing="20">
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #ffffff; -fx-border-color: lightgray; -fx-padding: 10;">
                    <Label fx:id="studentCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label text="Total Students" />
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #ffffff; -fx-border-color: lightgray; -fx-padding: 10;">
                    <Label fx:id="resourceCountLabel" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label text="Total Resources" />
                </VBox>
                <VBox alignment="CENTER" spacing="5" style="-fx-background-color: #ffffff; -fx-border-color: lightgray; -fx-padding: 10;">
                    <Label fx:id="averageRatingLabel" text="0.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                    <Label text="Average Rating" />
                </VBox>
            </HBox>


            <!-- Search and Add Button -->
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Search resources..." HBox.hgrow="ALWAYS"/>
                <Button text="Add New Resource" onAction="#onAddResource"/>
            </HBox>

            <!-- Resources Table -->
            <TableView fx:id="resourceTable" prefHeight="400">
                <columns>
                    <TableColumn fx:id="titleCol" text="Title"/>
                    <TableColumn fx:id="typeCol" text="Type"/>
                    <TableColumn fx:id="difficultyCol" text="Difficulty"/>
                    <TableColumn fx:id="ratingCol" text="Rating"/>
                    <TableColumn fx:id="actionCol" text="Details"/>
                    <TableColumn fx:id="statusCol" text="Statut"/>


                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>