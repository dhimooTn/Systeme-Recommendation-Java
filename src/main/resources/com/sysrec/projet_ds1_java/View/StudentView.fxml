<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #f8f5fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sysrec.projet_ds1_java.Controller.StudentController">

    <!-- Top Navigation Bar -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #6a3093; -fx-padding: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 3);">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Student Dashboard" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#logout" style="-fx-background-color: #4a235a; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 20; -fx-cursor: hand;" text="Logout" />
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 24; -fx-background-color: transparent;">

                <!-- Welcome Section -->
                <VBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 0 0 16 0;">
                    <Label fx:id="welcomeLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4a235a;" text="ðŸ‘‹ Welcome back!" />
                    <Label style="-fx-text-fill: #9c64c3; -fx-font-size: 14px;" text="Here's what's available for your learning today." />
                </VBox>

                <!-- Stats Cards -->
                <HBox alignment="CENTER" spacing="20">
                    <VBox spacing="8" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(106,48,147,0.1), 10, 0, 0, 3);">
                        <Label fx:id="completedLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" text="" />
                        <Label style="-fx-text-fill: #9c64c3; -fx-font-size: 14px;" text="Resources Completed" />
                    </VBox>
                    <VBox spacing="8" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(106,48,147,0.1), 10, 0, 0, 3);">
                        <Label fx:id="savedLabel" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" text="" />
                        <Label style="-fx-text-fill: #9c64c3; -fx-font-size: 14px;" text="Saved Resources" />
                    </VBox>
                </HBox>

                <!-- Search Section -->
                <VBox spacing="16" style="-fx-padding: 16; -fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(106,48,147,0.1), 10, 0, 0, 3);">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #4a235a;" text="Find Learning Resources" />
                    <HBox alignment="CENTER" spacing="12">
                        <TextField fx:id="searchField" onKeyReleased="#filterResources" promptText="Search by title, category or teacher..."
                                   style="-fx-background-radius: 20; -fx-border-radius: 20; -fx-padding: 8 16; -fx-pref-width: 400; -fx-border-color: #d9c2f0; -fx-focus-color: #9c64c3;" />
                        <Button onAction="#openFilters" style="-fx-background-color: #9c64c3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 24; -fx-background-radius: 20; -fx-cursor: hand;" text="Filters" />
                    </HBox>
                    <VBox fx:id="resultsContainer" alignment="TOP_CENTER" spacing="12" style="-fx-padding: 8;" />
                </VBox>

                <!-- Recommendations Section -->
                <VBox spacing="12" style="-fx-padding: 16; -fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(106,48,147,0.1), 10, 0, 0, 3);">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4a235a;" text="Recommended For You" />
                    <Label style="-fx-text-fill: #9c64c3; -fx-font-size: 14px;" text="Personalized based on your interests" />
                    <ListView fx:id="recommendationsListView" style="-fx-background-color: transparent; -fx-padding: 8 0;">
                        <placeholder>
                            <Label style="-fx-text-fill: #9c64c3; -fx-font-size: 14px;" text="No recommendations available. Rate some resources to get personalized suggestions." />
                        </placeholder>
                    </ListView>
                </VBox>

                <!-- Saved Resources Section -->
                <VBox spacing="12" style="-fx-padding: 16; -fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(106,48,147,0.1), 10, 0, 0, 3);">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #4a235a;" text="Your Saved Resources" />
                    <TableView fx:id="savedResourcesTable" style="-fx-background-color: transparent; -fx-border-color: #e8e0f5;">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

</BorderPane>